mpd = /usr/local/intel/impi/3.2.0.011/bin64/mpd
INCL = 
LIBS = -lglut -lGLU -lGL -lX11 -lXmu -lpthread -Wno-deprecated
OPT  = -O3

exec: test
	rm -r /a/home/cc/students/enginer/shaishif/Logs
	mkdir /a/home/cc/students/enginer/shaishif/Logs
	mkdir /a/home/cc/students/enginer/shaishif/Logs/Extra
	mkdir /a/home/cc/students/enginer/shaishif/Logs/Output
	${mpiRun} -m ${mpd} --rsh=/usr/bin/ssh -n 40 /a/home/cc/students/enginer/shaishif/GA_binary/GA.exe

test: Candidate.cpp SBModel.cpp FkModel.cpp GA.cpp
	${mpiCC} Mat.cpp safeJobVector.cpp Candidate.cpp SBModel.cpp FkModel.cpp GA.cpp -g -o /a/home/cc/students/enginer/shaishif/GA_binary/GA.exe ${OPT} ${INCL} ${LIBS}

